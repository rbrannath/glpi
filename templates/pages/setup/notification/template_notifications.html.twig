<table class="table table-borderless">
   {% if notifications|length > 0 %}
      <thead>
         <tr>
            <th>{{ __('ID') }}</th>
            <th>{{ 'Notification'|itemtype_name(1) }}</th>
            <th>{{ __('Mode') }}</th>
         </tr>
      </thead>
      <tbody>
         {% for notification in notifications %}
            <tr>
               <td>{{ notification['id'] }}</td>
               <td>{{ notification['link']|raw }}</td>
               <td>{{ notification['mode'] != constant('NOT_AVAILABLE') ? notification['mode']['label'] : (notification.fields['mode'] ~ '(' ~ notification['mode'] ~ ')') }}</td>
            </tr>
         {% endfor %}
      </tbody>
   {% else %}
      <tbody>
         <tr><td class="b center">{{ __('No item found') }}</td></tr>
      </tbody>
   {% endif %}
</table>
